generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Connection {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  type        ConnectionType
  host        String?  @map("normal_host")
  port        Int?     @map("normal_port")
  apiKey      String?  @map("cloud_api_key")
  tenant      String?  @map("cloud_tenant")
  database    String?  @map("cloud_database")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("connections")
}

enum ConnectionType {
  ChromaNormal
  ChromaCloud
}
